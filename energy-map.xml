<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 800 600">
  <!-- Background with soft gradient -->
  <defs>
    <radialGradient id="bg-gradient" cx="50%" cy="50%" r="70%" fx="50%" fy="50%">
      <stop offset="0%" style="stop-color:#f7f9fc;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#edf2f7;stop-opacity:1" />
    </radialGradient>
    <filter id="shadow" x="-20%" y="-20%" width="140%" height="140%">
      <feDropShadow dx="2" dy="2" stdDeviation="3" flood-opacity="0.1"/>
    </filter>
  </defs>
  
  <!-- Container box for all nodes -->
  <rect x="60" y="80" width="680" height="380" rx="10" ry="10" fill="white" stroke="#e2e8f0" stroke-width="1" filter="url(#shadow)"/>
  
  <!-- Background fill -->
  <rect x="60" y="80" width="680" height="380" rx="10" ry="10" fill="url(#bg-gradient)" stroke="none"/>
  
  <!-- Title - positioned at the top of the container box -->
  <rect x="60" y="80" width="680" height="40" rx="10" ry="10" fill="#f8fafc" stroke="none"/>
  <text x="400" y="105" text-anchor="middle" font-family="Arial" font-size="20" font-weight="bold" fill="#333">Energy Map</text>
  <line x1="60" y1="120" x2="740" y2="120" stroke="#e2e8f0" stroke-width="1"/>
  
  <!-- Group Backgrounds with circular formations -->
  <circle cx="280" cy="300" r="75" fill="#FED7E2" opacity="0.2"/>
  <circle cx="520" cy="300" r="100" fill="#FEF3C7" opacity="0.2"/>
  <circle cx="400" cy="380" r="70" fill="#D1FAE5" opacity="0.2"/>
  <circle cx="400" cy="300" r="70" fill="#6366F1" opacity="0.1"/>
  <circle cx="340" cy="340" r="50" fill="#805AD5" opacity="0.1"/>
  
  <!-- Connection lines -->
  <!-- From Me to categories -->
  <line x1="400" y1="300" x2="280" y2="300" stroke="#EC4899" stroke-width="3" opacity="0.6" stroke-linecap="round"/>
  <line x1="400" y1="300" x2="520" y2="300" stroke="#F59E0B" stroke-width="3" opacity="0.6" stroke-linecap="round"/>
  <line x1="400" y1="300" x2="400" y2="380" stroke="#10B981" stroke-width="3" opacity="0.6" stroke-linecap="round"/>
  <line x1="400" y1="300" x2="340" y2="340" stroke="#805AD5" stroke-width="4" opacity="0.8" stroke-linecap="round"/>
  
  <!-- From categories to subcategories -->
  <line x1="280" y1="300" x2="280" y2="240" stroke="#EC4899" stroke-width="2" opacity="0.5" stroke-linecap="round"/>
  <line x1="520" y1="300" x2="590" y2="300" stroke="#F59E0B" stroke-width="2" opacity="0.5" stroke-linecap="round"/>
  <line x1="520" y1="300" x2="550" y2="360" stroke="#F59E0B" stroke-width="2" opacity="0.5" stroke-linecap="round"/>
  <line x1="520" y1="300" x2="520" y2="240" stroke="#F59E0B" stroke-width="2" opacity="0.5" stroke-linecap="round"/>
  
  <!-- From Me to personal items -->
  <line x1="400" y1="300" x2="400" y2="220" stroke="#6366F1" stroke-width="2" opacity="0.5" stroke-linecap="round"/>
  <line x1="400" y1="300" x2="470" y2="260" stroke="#6366F1" stroke-width="2" opacity="0.5" stroke-linecap="round"/>
  <line x1="400" y1="300" x2="330" y2="260" stroke="#6366F1" stroke-width="2" opacity="0.5" stroke-linecap="round"/>
  <line x1="400" y1="300" x2="480" y2="350" stroke="#6366F1" stroke-width="2" opacity="0.5" stroke-linecap="round"/>
  <line x1="470" y1="260" x2="480" y2="350" stroke="#6366F1" stroke-width="1" opacity="0.4" stroke-linecap="round"/>
  
  <!-- Central ME node -->
  <circle cx="400" cy="300" r="45" fill="#6366F1" opacity="0.8"/>
  <text x="400" y="300" text-anchor="middle" dominant-baseline="middle" font-family="Arial" font-size="15" font-weight="bold" fill="white">Me</text>
  
  <!-- Self Nodes in circular formation around ME -->
  <circle cx="400" cy="220" r="30" fill="#6366F1" opacity="0.7"/>
  <text x="400" y="220" text-anchor="middle" dominant-baseline="middle" font-family="Arial" font-size="12" fill="white">Health</text>
  
  <circle cx="470" cy="260" r="30" fill="#6366F1" opacity="0.7"/>
  <text x="470" y="260" text-anchor="middle" dominant-baseline="middle" font-family="Arial" font-size="12" fill="white">Hobbies</text>
  
  <circle cx="330" cy="260" r="30" fill="#6366F1" opacity="0.7"/>
  <text x="330" y="260" text-anchor="middle" dominant-baseline="middle" font-family="Arial" font-size="12" fill="white">Personal</text>
  <text x="330" y="275" text-anchor="middle" dominant-baseline="middle" font-family="Arial" font-size="12" fill="white">Finance</text>
  
  <circle cx="480" cy="350" r="25" fill="#6366F1" opacity="0.5"/>
  <text x="480" y="350" text-anchor="middle" dominant-baseline="middle" font-family="Arial" font-size="10" fill="white">Ham Radio</text>
  
  <!-- Family Group - Left -->
  <circle cx="280" cy="300" r="40" fill="#EC4899" opacity="0.7"/>
  <text x="280" y="300" text-anchor="middle" dominant-baseline="middle" font-family="Arial" font-size="14" font-weight="bold" fill="white">Family</text>
  
  <!-- Only Home node remains -->
  <circle cx="280" cy="240" r="28" fill="#EC4899" opacity="0.6"/>
  <text x="280" y="240" text-anchor="middle" dominant-baseline="middle" font-family="Arial" font-size="11" fill="white">Home</text>
  
  <!-- Helping node - positioned between Family and Friends -->
  <circle cx="340" cy="340" r="35" fill="#805AD5" opacity="0.8"/>
  <text x="340" y="340" text-anchor="middle" dominant-baseline="middle" font-family="Arial" font-size="14" font-weight="bold" fill="white">Helping</text>
  
  <!-- Friends Group -->
  <circle cx="400" cy="380" r="35" fill="#10B981" opacity="0.7"/>
  <text x="400" y="380" text-anchor="middle" dominant-baseline="middle" font-family="Arial" font-size="12" font-weight="bold" fill="white">Friends</text>
  
  <!-- Work Group - Right -->
  <circle cx="520" cy="300" r="40" fill="#F59E0B" opacity="0.7"/>
  <text x="520" y="300" text-anchor="middle" dominant-baseline="middle" font-family="Arial" font-size="14" font-weight="bold" fill="white">Work</text>
  
  <!-- Work nodes in tighter circular formation -->
  <circle cx="590" cy="300" r="35" fill="#F59E0B" opacity="0.6"/>
  <text x="590" y="300" text-anchor="middle" dominant-baseline="middle" font-family="Arial" font-size="12" fill="white">Primary Job</text>
  
  <circle cx="550" cy="360" r="30" fill="#F59E0B" opacity="0.6"/>
  <text x="550" y="360" text-anchor="middle" dominant-baseline="middle" font-family="Arial" font-size="12" fill="white">Big Project 1</text>
  
  <circle cx="520" cy="240" r="30" fill="#F59E0B" opacity="0.6"/>
  <text x="520" y="240" text-anchor="middle" dominant-baseline="middle" font-family="Arial" font-size="11" fill="white">Learning</text>
</svg>